<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" 
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  metal:use-macro="context/@@groupserver_layout/page">
  <head>
    <title metal:fill-slot="title" >
      <span tal:replace="view/title"/>:
      <span tal:replace="view/siteInfo/name"/>
    </title>
  </head>
  <body>
    <h1 metal:fill-slot="pagetitle"
      tal:content="view/title">Page o' Stuff</h1>
    <tal:block metal:fill-slot="body">
      <div tal:replace="structure view/content">Stuff</div>

    </tal:block>
    <tal:block metal:fill-slot="javascript">
      <tal:block
        define="jsFile string:javascript.xml"
        condition="python:hasattr(context.aq_parent.aq_explicit, jsFile)"
        replace="structure python:getattr(context.aq_parent, jsFile)(method='html')">
        JavaScript
      </tal:block>
    </tal:block>
  </body>
</html>

